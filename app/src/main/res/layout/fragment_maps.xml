<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.menu2_survey.maps.MapFragment">

    <TextView
        style="@style/pantallasTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Subzona" />

    <Spinner
        android:id="@+id/spinnerSubZonasMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/style_spinner1"
        android:minHeight="50sp"
        android:spinnerMode="dialog" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMapas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:context=".ui.menu2_survey.capture.CaptureFragment"
        tools:listitem="@layout/items_maps" />

</LinearLayout>