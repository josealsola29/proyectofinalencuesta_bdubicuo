<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvExplotacion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/white2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/vExplotacionInconsistencia"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@color/hogar" />

        <TextView
            android:id="@+id/tvExplotacionInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="PROD. 01 | EXPL. 01"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvExplotacionJefeInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="JOSE ALSOLA VILLAMONTE"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/list_captura_hogares" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
