    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvViviendaHogar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white2"
        app:cardCornerRadius="0dp"
        app:strokeColor="@color/stroke_color"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/vInconsistencias"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@color/vivienda" />

            <TextView
                android:id="@+id/tvVHViviendaInfo"
                style="@style/tituloViviendasHogaresList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="VIV 01 - HOG 1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvVHCompletados"
                style="@style/tituloViviendasHogaresList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Completados: 0"
                android:textStyle="bold" />

            <TextView
            android:id="@+id/tvVHPendientes"
            style="@style/tituloViviendasHogaresList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pendientes: 0"
            android:textStyle="bold" />

